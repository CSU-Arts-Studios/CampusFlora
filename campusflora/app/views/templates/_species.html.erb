<script type="text/template" id="list-row-template">
  <img class="list-image" src="<@ print(pictures.length > 0 ? 'pictures[0].url' : IMG_NOT_FOUND_SMALL) @>">
  <div class="text">
    <div class="title"><@= genusSpecies @></div>
    <div class="subtitle"><@= commonName @></div>
  </div>
  <%= image_tag 'disclosure-indicator.png', class: 'disclosure-indicator' %>
</script>

<script type="text/template" id="family-row-template">
  <div class="checkbox family selected">
    <i class="icon-ok"></i>
  </div>
  <div class='title'><@= name @></div>
</script>