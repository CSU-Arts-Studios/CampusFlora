<p id="notice"><%= notice %></p>

<h1>Listing Species Locations</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @species_locations.each do |species_location| %>
      <tr>
        <td><%= link_to 'Show', species_location %></td>
        <td><%= link_to 'Edit', edit_species_location_path(species_location) %></td>
        <td><%= link_to 'Destroy', species_location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

